@import "bootstrap";
body { padding-top: 60px; }
@import "bootstrap-responsive";

ul.sortable{

  li{
    border: solid 1px #dddddd;
    padding: 5px 5px;
    margin: 2px 2px;
    background-color: white;
    cursor: move;
    @include border-radius(5px);

    &.drop-hover{
      border-color: #1f6993;
      @include box-shadow(0 0 4px #1f6993);
    }

    &.drop-placeholder{
      background-color: rgba(0, 0, 0, 0.2);;
    }
  }
}

.draggables {
  span.label, img.user{
    cursor: move;
  }
}

.loader{
  margin-top: 7px;
  display: none;
}

body{
  background-color: #E5E6DC;
  background-image: url(<%= asset_path 'texture.png' %>);
}

#team-members{
  img.user{  
    @include border-radius(999px);
    @include box-shadow(2px 2px 5px #cccccc);
    height: 50px;
    width: 50px;
  }
}

#issue{
  img.user{  
    @include border-radius(5px);
    @include box-shadow(2px 2px 5px #cccccc);
    height: 50px;
    width: 50px;
  }

  div.user{
    width: 75px;
  }
}

ul.comments{
  li{
    padding-top: 5px;
  } 
}

#issue{
  .body{
    border: solid 1px #dddddd;
    padding: 5px 5px;
    margin: 2px 2px;
    background-color: white;
    @include border-radius(5px);
  }
}

li.comment{
  .body{
    border: solid 1px #dddddd;
    padding: 5px 5px;
    margin: 2px 2px;
    background-color: white;
    @include border-radius(5px);

  }
}

